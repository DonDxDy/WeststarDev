
<odoo>
    <record id="workshop_project_task_view_form" model="ir.ui.view">
        <field name="name">project.task.view.form.inherit.workshop</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='project_id']" position="attributes">
                <attribute name="attrs">{"invisible": [["service_id","!=",False]]}</attribute>
                <attribute name="options">{"no_open":true}</attribute>
            </xpath>
            <xpath expr="//field[@name='project_id']" position="after">
                <field name="service_id"/>
<!--                <field name="vehicle_id"/>-->
            </xpath>
            <xpath expr="//notebook/page[@name='extra_info']" position="after">
                <page string="Sales Order Lines" id="order_lines">
                    <field
                                name="order_line"
                                widget="section_and_note_one2many"
                                mode="tree"
                    >
                            <tree
                                    string="Parts"
                                    editable="bottom"
                                >
                                    <control>
                                        <create name="add_product_control" string="Add a product"/>
                                        <create name="add_section_control" string="Add a section" context="{'default_display_type': 'line_section'}"/>
                                        <create name="add_note_control" string="Add a note" context="{'default_display_type': 'line_note'}"/>
                                    </control>

                                    <field name="order_id"/>
                                    <field name="sequence" widget="handle" />
                                    <!-- We do not display the type because we don't want the user to be bothered with that information if he has no section or note. -->
                                    <field name="display_type" invisible="1"/>
                                    <field name="product_uom_category_id" invisible="1"/>

                                    <field name="product_updatable" invisible="1"/>
                                    <field name="product_id"/>
<!--                                    <field name="name" widget="section_and_note_text" optional="show"/>-->
                                    <field name="product_uom_qty"/>
                                    <field name="price_unit"/>
                                    <field name="price_subtotal" widget="monetary"/>
                                    <field name="price_total" widget="monetary"/>
<!--                                    <field name="state" invisible="1"/>-->
<!--                                    <field name="invoice_status" invisible="1"/>-->
<!--                                    <field name="currency_id" invisible="1"/>-->
<!--                                    <field name="price_tax" invisible="1"/>-->
                                    <field name="company_id" invisible="1"/>
                                </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>