<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_header">

        <t t-if="not o" t-set="o" t-value="doc"/>

        <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>

        <div class="header"></div>
        <div class="article" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
          <t t-raw="0"/>
        </div>
        <div class="footer">
            <div class="row">
                <div class="col-4">
                    <t t-if="'Lagos' in company.name">
                        <h5>ECOBANK ACCOUNT</h5>
                        <span>Account Name. Weststar Associates Limited</span><br />
                        <span>Account No.: 5882000073</span>
                    </t>
                    <t t-else="">
                        <h5>POLARIS BANK</h5>
                        <span>Account Name. Weststar Associates Limited- Abuja Imprest</span><br />
