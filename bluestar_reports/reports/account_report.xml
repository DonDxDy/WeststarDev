<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="report_bluestar_account_invoice_with_payments" inherit_id="account.report_invoice_with_payments">
        <xpath expr="/t/t/div/div[1]/div[2]" position="after">
            <div class="col-auto mw-100 mb-2" t-if="o.invoice_origin" name="origin">
                <strong>Source:</strong>
                <p class="m-0" t-field="o.invoice_origin"/>
            </div>
            <div class="col-auto mw-100 mb-2" t-if="o.partner_id.ref" name="customer_code">
                <strong>Customer Code:</strong>
                <p class="m-0" t-field="o.partner_id.ref"/>
            </div>
        </xpath>
    </template>
</odoo>